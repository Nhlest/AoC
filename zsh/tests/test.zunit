#!/usr/bin/env zunit

@setup {
  source './aoc00/lib.zsh'
}

@test 'Testing universal truths' {
  assert 'true' same_as 'true'
  assert '2' same_as $((1+1))
  assert '4' same_as $((2*2))
  declare -a array1
  declare -a array2
  arraya=(1 2 3)
  arrayb=(1 2 3)
  assert "$arraya" same_as "$arrayb"
}

@test 'Testing sort at edge cases' {
  a=()
  sample_function "${a[@]}"
  assert "" same_as "${result}"
  a=(1)
  sample_function "${a[@]}"
  assert "1" same_as "${result}"
}

@test 'Testing sort at normal cases' {
  a=(5 4 3 2 1)
  sample_function "${a[@]}"
  assert "1 2 3 4 5" same_as "${result}"
}
